<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.firewizapp.ReadingSheetMusicController"
            prefWidth="350.0" prefHeight="600.0"
            style="-fx-background-color: #d1c4e9;">

    <!-- Header -->
    <Label text="Reading Sheet Music - Lesson 3"
           layoutX="40" layoutY="40"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Begin Lesson Button -->
    <Button fx:id="beginLessonButton"
            layoutX="100" layoutY="100"
            prefWidth="150"
            text="Begin Lesson"
            onAction="#handleBeginLesson"
            style="-fx-background-color: #9575cd; -fx-text-fill: white; -fx-font-weight: bold;" />

    <!-- Back to Lessons Button -->
    <Button text="Back to Lessons"
            layoutX="100" layoutY="150"
            prefWidth="150"
            onAction="#goBackToLessons"
            style="-fx-background-color: #ff7043; -fx-text-fill: white; -fx-font-weight: bold;" />
</AnchorPane>
