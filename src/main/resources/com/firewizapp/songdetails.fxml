<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.firewizapp.SongDetailsController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: #d9e8e8;"
      prefWidth="350" prefHeight="600">

    <Label fx:id="titleLabel" styleClass="label" />
    <Label fx:id="artistLabel" />
    <Label fx:id="difficultyLabel" />
    <Label fx:id="tempoLabel" />
    
    <Button text="Play Song" onAction="#handlePlay" />
    <Button text="Back" onAction="#handleBack" />
</VBox>
