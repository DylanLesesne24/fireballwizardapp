<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.firewizapp.IntroToNotesController"
      alignment="CENTER"
      spacing="20.0"
      style="-fx-padding: 50;">

    <!-- Header Bubble -->
    <HBox alignment="CENTER" spacing="10.0"
          style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-padding: 10;">
        <Label text="Intro to Notes"
               style="-fx-font-size: 24px; -fx-text-fill: black;" />
    </HBox>

    
    <StackPane>
        <Rectangle width="300" height="100" arcWidth="20" arcHeight="20"
                   fill="#ffffff" stroke="black" strokeWidth="2" />
        <Label text="Description: Learn the names of musical notes and where they appear on the staff. This lesson lays the foundation for reading and playing music."
               wrapText="true"
               style="-fx-font-size: 14px; -fx-padding: 10px; -fx-text-fill: black;"
               maxWidth="280" />
    </StackPane>

    <!-- Begin Lesson Button  -->
   <Button fx:id="beginLessonButton"
        text="Begin Lesson"
        onAction="#handleBeginLesson"
        styleClass="button" />

</VBox>
