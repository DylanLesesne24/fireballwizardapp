<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.firewizapp.ReadingSheetMusicController"
      alignment="CENTER"
      spacing="20.0"
      style="-fx-padding: 50;">

    <!-- Header Bubble -->
    <HBox alignment="CENTER" spacing="10.0"
          style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-padding: 10;">
        <Label text="Reading Sheet Music"
               style="-fx-font-size: 24px; -fx-text-fill: black;" />
    </HBox>

    <!-- Description inside a styled rectangle bubble -->
    <StackPane>
        <Rectangle width="300" height="100" arcWidth="20" arcHeight="20"
                   fill="#ffffff" stroke="black" strokeWidth="2" />
        <Label text="Description: Discover how to interpret sheet music, including note values, rests, and key symbols"
               wrapText="true"
               style="-fx-font-size: 14px; -fx-padding: 10px; -fx-text-fill: black;"
               maxWidth="280" />
    </StackPane>

    <!-- Begin Lesson Button (Bubble Style) -->
    <Button fx:id="beginLessonButton"
            text="Begin Lesson"
            onAction="#handleBeginLesson"
            styleClass="button" />

</VBox>