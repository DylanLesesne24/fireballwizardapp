        <ImageView fitWidth="30" fitHeight="30">
            <image>
                <Image url="@com/firewizapp/images/note1.png" />
            </image>
        </ImageView>
        <ImageView fitWidth="30" fitHeight="30">
            <image>
                <Image url="@com/firewizapp/images/note2.png" />
            </image>
