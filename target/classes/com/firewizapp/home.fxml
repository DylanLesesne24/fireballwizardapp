<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.firewizapp.HomeController"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="350.0"
            style="-fx-background-color: #d9e8e8;">
    
    <VBox alignment="CENTER" spacing="20.0"
          AnchorPane.topAnchor="30.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0">
        
        <Label text="Welcome!" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Button text="Lessons"
                styleClass="rounded-button"
                onAction="#handleLessons" />

        <Button text="Song List"
                styleClass="rounded-button"
                onAction="#handleSongList" />

        <Button text="Quiz"
                styleClass="rounded-button"
                onAction="#handleQuiz" />
    </VBox>
</AnchorPane>
