<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.firewizapp.LessonsController"
            stylesheets="@styles.css"
            prefHeight="600.0" prefWidth="350.0"
            style="-fx-background-color: #d9e8e8;">

    <!-- Back Arrow (top-left) -->
    <ImageView fx:id="backArrow" fitWidth="24" fitHeight="24"
               layoutX="10" layoutY="10" onMouseClicked="#goBackToHome">
        <image>
            <Image url="@images/back.png" />
        </image>
    </ImageView>

    <!-- Top Header -->
    <HBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label text="Lessons" styleClass="label" />
    </HBox>

    <!-- Main Content -->
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        
        <!-- Optional icon or lesson image -->
        <ImageView fitWidth="120" fitHeight="120">
            <image>
                <Image url="@images/lessons.png" />
            </image>
        </ImageView>

        <!-- Lesson Buttons -->
        <Button text="Intro to Notes" onAction="#handleIntroToNotes" styleClass="rounded-button" prefWidth="200" />
        <Button text="Playing Your First Song" onAction="#handleFirstSong" styleClass="rounded-button" prefWidth="200" />
        <Button text="Reading Sheet Music" onAction="#handleSheetMusic" styleClass="rounded-button" prefWidth="200" />
    </VBox>

    <!-- Optional bottom icons -->
    <HBox alignment="CENTER" spacing="40.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <ImageView fitWidth="30" fitHeight="30">
            <image>
                <Image url="@images/note1.png" />
            </image>
        </ImageView>
        <ImageView fitWidth="30" fitHeight="30">
            <image>
                <Image url="@images/note2.png" />
            </image>
        </ImageView>
        <ImageView fitWidth="30" fitHeight="30">
            <image>
                <Image url="@images/note3.png" />
            </image>
        </ImageView>
    </HBox>

</AnchorPane>
